<header class="shadow-sm rounded">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <% if user_signed_in? %>
         <a class="navbar-brand" href="/"><span>viaje.JP</span></a>
        <% else admin_signed_in? %>
         <a class="navbar-brand" href="/admin/users"><span>viaje.JP</span></a>
        <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
             <li class="nav-item">
                 <%= link_to posts_path, class: 'nav-link text-dark btn btn-outline-secondary btn-lg mr-3' do %>
                   <i class="fas fa-home"></i>
                 <% end %>
               </li>
               <li class="nav-item">
                 <%= link_to user_path(current_user.id), class: 'nav-link text-dark btn btn-outline-secondary btn-lg mr-3' do %>
                   <i class="fas fa-user"></i>
                 <% end %>
               </li>
               <li class="nav-item ml-auto">
                 <%= link_to new_post_path, class: 'nav-link text-dark btn btn-outline-secondary btn-lg mr-3' do %>
                   <i class="fas fa-marker"></i>
                 <% end %>
               </li>
               <li class="nav-item ml-auto">
                 <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary btn-lg mr-3' do %>
                   <i class="fas fa-sign-out-alt"></i>
                 <% end %>
               </li>
             <% elsif admin_signed_in? %>
                <li class="nav-item">
                 <%= link_to admin_user_path(current_admin.id), class: 'nav-link text-dark btn btn-outline-secondary btn-lg' do %>
                   <i class="fas fa-users"></i>
                 <% end %>
                </li>
                <li class="nav-item ml-auto">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary btn-lg' do %>
                   <i class="fas fa-sign-out-alt"></i>
                 <% end %>
                </li>
             <% else %>
               <li class="nav ml-auto">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
               </li>
               <li class="nav ml-auto">
                 <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
               </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
</header>