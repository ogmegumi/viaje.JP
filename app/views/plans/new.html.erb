<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">持ち物リスト投稿</h5>
      <div class="form-body p-4">
       <% if @plan.errors.any? %>
         <%= @plan.errors.count %>件のエラーが発生しました
         <% @plan.errors.full_messages.each do |message| %>
           <%= message %>
         <% end %>
       <% end %>
       <%= form_with model: @plan ,url: plan_posts_path(@plan), local:true do |f| %>
       <div class="input-group mb-3 mt-4">
           <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-history"></i></span>
           </div>
           <%= f.time_select(:start_time, {class:'select-date', id:"start-time", prompt:'--', time_separator: ':'}, ignore_data: true) %>
       </div>
       <div class="input-group mb-3 mt-4">
           <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-history"></i></span>
           </div>
           <%= f.time_select(:finish_time, {class:'select-date', id:"start-time", prompt:'--', time_separator: ':'}, ignore_data: true) %>
       </div>
       <div class="input-group mb-3 mt-4">
           <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-clipboard"></i></span>
           </div>
           <%= f.text_field :plan_content, class:"form-control", placeholder:"計画行動" %>
       </div>
         <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
       <% end %>
      </div>
    </div>
  </div>