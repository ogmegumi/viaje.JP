  <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col-md-2"><i class="far fa-calendar-alt"></i></th>
          <th scope="col-md-2"><i class="fas fa-history"></i></th>
          <th scope="col-md-4"><i class="fas fa-route"></i></th>
          <th scope="col-md-2"></th>
        </tr>
      </thead>
      <tbody>
        <% plan_days.each do |day|%>
          <tr>
              <th scope="row">
               <% if post.user == current_user %>
                 <%= day.days.strftime("%F") %>
               <% end %>
              </th>
            <% day.plans.each do |plan| %>
              <th scope="row">
                <%= plan.start_time.strftime("%H:%M") %><br>
               <p style="margin-right: 10px;">|</p>
                <%= plan.finish_time.strftime("%H:%M") %>
              </th>
              <td class="h6"><br><%= plan.plan_content %><br></td>
              <td>
                <% if post.user == current_user %>
                  <%= link_to "削除", post_plan_day_path(day.post, day), method: :delete, class:"bbtn btn-outline-danger btn-sm" %><br>
                  <%= link_to "編集", edit_post_plan_day_path(day.post, day), class:"bbtn btn-outline-success btn-sm" %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
    </tbody>
  </table>
