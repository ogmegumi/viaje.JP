<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.category %></td>
        <td><%= task.plan_content %></td>
        <td><%= task.start_time %></td>
        <td><%= task.finish_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_admin_task_path %>