<% provide(:title, "会員情報編集") %>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center">
      <%= @user.name %>さんの会員情報編集
    </h2>
      <%= form_with(model: @user, url:admin_user_path(@user.id), local: true) do |f| %>
      <div class="col-md-12">
        <div class="form-group col-md-12">
        <%= f.label :"会員ID:", class: "col-md-4 control-label" %>
        <%= f.label :"#{@user.id}" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"ユーザーネーム", class: "col-md-4 control-label" %>
        <%= f.text_field :name, class: "col-md-3 form-control-static name" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"メールアドレス", class: "col-md-4 control-label" %>
        <%= f.text_field :email, class: "col-md-7 form-control-static"%>
        </div>

        <div class="form-group col-md-12">
        <%= f.label :"会員ステータス", class: "col-md-4 control-label" %>
        　<%= f.radio_button :unsubscribe, true %>
        　<%= f.label :unsubscribe, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :unsubscribe, false %>
        　<%= f.label :unsubscribe, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>

  <div class="actions  col-md-12 text-center">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary save col-xs-6" %>
  </div>
  <% end %>
  <div class="col-md-12 text-center">
      <%= link_to "戻る", admin_user_path(@user), class: "glyphicon glyphicon-home btn btn-info" %>
  </div>

</div>
</div>