<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">編集フォーム</h5>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
        <div id="error_explanation">
         <%= @post.errors.count %>件のエラーが発生しました
         <% @post.errors.full_messages.each do |message| %>
           <%= message %>
         <% end %>
        </div>
       <% end %>
         <%= form_with model: @post, url: admin_post_path(@post), local:true do |f| %>
         <div class="form-group">
           <%= f.label"公開範囲を選択" %><br>
           <%= f.select :status, [["非公開", "closed"], ["公開", "published"], ["下書き", "draft"]],required: true,class:"form-control" %>
         </div>
         <hr>
         <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
       <% end %>
      </div>
    </div>
  </div>
</div>