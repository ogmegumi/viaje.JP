<div class="container">
   <h2 class="head-line title_h2 text-center">投稿一覧</h2>
   <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-bordered table-condensed  center-block">
          <thead>
            <tr class="thead-dark">
              <th>投稿画像(詳細ページリンク有)</th>
              <th>ユーザーネーム</th>
              <th>本文</th>
              <th>感情スコア</th>
              <th>表示ステータス編集</th>
              <th>コメントユーザー</th>
              <th>コメント感情スコア(削除は詳細ページ)</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td class="col-md-2">
                <%= link_to admin_post_path(post) do %>
                 <%= attachment_image_tag post, :image, class:"card-img-top", size:"100x100" %>
                <% end %>
              </td>
              <td class="text-left">
                <%= link_to admin_user_path(post.user), class:"ml-3" do %>
                 <i class="fas fa-user"></i>
                 <%= post.user.name %>
                <% end %>
              </td>
              <td>
                <%= post.content %>
              </td>
              <td>
                <span class="sentiment-score">本文の感情分析スコア[<%= post.score %>]</span>
              </td>
              <td>
                <%= link_to edit_admin_post_path(post), class: "btn btn-outline-success" do %> 
                 <%= post.status %>
                <% end %>
              </td>
              <td>
                <% post.post_comments.each do |post_comment| %>
                  <div><%= post_comment.user.name %></div>
                <% end %>
              </td>
              <td>
                <% post.post_comments.each do |post_comment| %>
                  <div class="sentiment-score"><%= post_comment.comment %>[<%= post_comment.comment_score %>]
                  </div>
                <% end %>
              </td>
            </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
</div>