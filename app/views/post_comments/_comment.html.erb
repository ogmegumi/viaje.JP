<% post_comments.each do |comment| %>
  <li>
    <div class="topPosition">
      <%= link_to user_path(post_comment.user.id), class: "user_#{post_comment_user.id}" do %>
        <!--< if comment.user.icon? %>-->
        <!--  <= image_tag comment.user.icon.url, class: "commentUserIcon" %>-->
        <!--< else %>-->
        <!--  <i class="fas fa-user-circle"></i>-->
        <!--< end %>-->
        <p class="comment_user_name"><%= comment.user.name %></p>
      <% end%>
      <% if comment.user_id == current_user.id %>
        <%= link_to post_comment_path(post_comment.post_id, post_comment.id), method: :delete, class: "delete" do %>
          <i class="fas fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    <div class="bottomPosition">
      <p class="commentContent"><%= comment.comment %></p>
      <p class="commentDatetime"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
  </li>
<% end %>