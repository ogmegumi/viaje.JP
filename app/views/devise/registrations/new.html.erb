<div class="container">
   <div class="row no-gutters">
      <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
        <h4 class="text-dark bg-light py-4 mb-0">新規会員登録</h4>
        <div class="text-center">
         <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <p>メールアドレスと<br>
                パスワードを入力してください。
            </p>

          <div class="input-group p-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true">
                <i class="fas fa-user"></i>
              </span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
          </div>

          <div class="input-group p-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'sample@example.com' %>
          </div>

          <div class="input-group p-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true">
                <i class="fas fa-lock"></i>
              </span>
            </div>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "password minimum 6" %>
          </div>

          <div class="input-group p-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true">
                <i class="fas fa-check-double"></i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'password confirm' %>
          </div>

          <div class="submit-group p-4">
            <%= f.submit "新規登録", class: "btn btn-outline-info btn-block" %>
          </div>
        <% end %>

        <div class="col-md-12">
        <%= render "devise/shared/links" %>
        </div>
        </div>
      </div>
   </div>
</div>

