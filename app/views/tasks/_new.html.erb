<% if task.errors.any? %>
  <div id="error_explanation">
    <%= task.errors.count %>件のエラーが発生しました
      <% task.errors.full_messages.each do |message| %>
       <%= message %>
    <% end %>
  </div>
<% end %>

<%= form_with model: task, local:true do |f| %>
    <div class="input-group mb-3 mt-4">
      <div class="input-group-prepend">
        <span class="input-group-text" aria-hidden="true"><i class="fas fa-suitcase"></i></span>
      </div>
      <%= f.select :category, [["貴重品", "task1"], ["交通", "task2"], ["電子機器類", "task3"], ["洗面用具", "task4"], ["衣類", "task5"], ["その他", "task6"]] %>
    </div>
    <div class="input-group mb-3 mt-4">
      <div class="input-group-prepend">
        <span class="input-group-text" aria-hidden="true"><i class="fas fa-suitcase"></i></span>
      </div>
      <%= f.text_field :belongings, class:"form-control", placeholder:"持ち物" %>
    </div>
    <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>
