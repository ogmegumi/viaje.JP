<div class="containar mx-auto w-50">
  <div class="category bg-success">貴重品</div>
    <% @tasks1.each do |task| %>
      <div class="index-item mb-20">
        <%= check_box_tag :check %>
        <%= label_tag :check, task.belongings %>
