<% users.each do |user| %>
      <div class="col-md-8 col-md-2 mx-auto">
        <div class="card-wrap">
          <div class="card">
           <div class="card-header align-items-center d-flex">
              <%= attachment_image_tag(user, :profile_image, :fill, 200, 200, class:"mt-3 rounded-circle", fallback: "noimage.png", size:"200x200") %>
              <span>
                <%= link_to user_path(user), class:"ml-3 h5" do %>
                  <i class="fas fa-user"></i>
                  <%= user.name %>
                <% end %>
              </span>
           </div>
           <div class="card-body">
             <p>フォロー数<%= user.followings.count %>人</p>
               <p>フォロワー数<%= user.followers.count %>人</p>
               <% if current_user.following?(user) %>
                 <p><%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-secondary" %></p>
               <% else %>
                  <p><%= link_to "Follow", user_relationships_path(user.id), method: :post, class:"btn btn-outline-secondary" %></p>
               <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>