<div class="container">

  <div class="row">
    <div class="col-md-5">
      <div class="avatar">
        <%= attachment_image_tag(@user, :profile_image, :fill, 200, 200, class:"mt-3 rounded-circle", fallback: "noimage.png", size:"200x200") %>
      </div>
    </div>

    <div class="col-md-7 mx-auto">
      <div class="user_name">
        <h3><%= @user.name %></h3>
      </div>
      <div class="info">
        <i class="far fa-comment-dots mr-3"><%= @user.posts.count %></i>
        follows<%= link_to @user.followings.count, user_followings_path(@user), class: "user_#{@user.id} mr-3" %>
        followers<%= link_to @user.followers.count, user_followers_path(@user), class: "user_#{@user.id}" %>
      </div>
      <span class="follow-btn">
        <% if current_user.following?(@user) %>
          <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-secondary mt-3 mb-3 d-block" %>
        <% else %>
          <%= link_to "Follow", user_relationships_path(@user.id), method: :post, class:"btn btn-outline-info mt-3 mb-3 d-block" %>
        <% end %>
      </span>
      <div class="introduction">
        <h6>自己紹介文</h6>
          <%= @user.introduction %>
      </div>
    </div>
  </div>
</div>
  <% if @user == current_user %>
    <div class="container-fluid"><!--<footer>-->
      <div class="row">
          <div class="col text-center">
              <%= link_to "memo", user_memo_path(@user), method: :get, class:"btn btn-outline-secondary d-block fas fa-book-open" %>
          </div>
          <div class="col text-center">
              <%= link_to "忘れ物管理", user_task_path(@user), method: :get, class:"btn btn-outline-secondary d-block far fa-check-circle" %>
          </div>
          <div class="col text-center">
              <%= link_to 'edit',edit_user_path(current_user),class: "btn btn-outline-secondary d-block fas fa-user-cog edit_user_#{@user.id}" %>
          </div>
      </div>
    </div>
  <% end %>
  <div class="container mt-5">
    <div class="row d-flex">
        <% @posts.each do |post| %>
          <div class="col-md-4">
            <span class="img_container">
              <%= link_to post_show_post_path(post) do %>
                <%= attachment_image_tag post, :image, class:"card-img-top", size: "200x200" %>
              <% end %>
            </span>
          </div>
        <% end %>
    </div>
  </div>
