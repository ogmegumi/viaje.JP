<% if @range == "User" %>
    <% @users.each do |user| %>
      <div class="col-md-8 col-md-2 mx-auto">
        <div class="card-wrap">
          <div class="card">
           <div class="card-header align-items-center d-flex">
             <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
              <span>
                <%= link_to user_path(user), class:"ml-3 h5" do %>
                  <i class="fas fa-user"></i>
                  <%= user.name %>
                <% end %>
              </span>
           </div>
           <div class="card-body">
             <p>フォロー数<%= user.followings.count %>人</p>
               <p>フォロワー数<%= user.followers.count %>人</p>
               <% if current_user.following?(user) %>
                 <p><%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-secondary" %></p>
               <% else %>
                  <p><%= link_to "Follow", user_relationships_path(user.id), method: :post, class:"btn btn-outline-secondary" %></p>
               <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
<% else %>
    <% @posts.each do |post| %>
      <div class="col-md-8 col-md-2 mx-auto">
        <div class="card-wrap">
          <div class="card">
           <div class="card-header align-items-center d-flex">
              <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
               <span>
                <%= link_to user_path(post.user), class:"ml-3 h5" do %>
                  <i class="fas fa-user"></i>
                  <%= post.user.name %>
                <% end %>
               </span>
           </div>
           <%= attachment_image_tag post, :image, class:"card-img-top" %>
           <div class="card-body">
             <div class="row ml-3 mb-3">
               <span id="favorite-btn_<%= post.id %>">
                 <%= render "favorites/favorite-btn", post: post %>
               </span>
               <span id="comment-count_<%= post.id %>">
                  コメント数:<%= post.post_comments.count %>
               </span>
             </div>
             <div>
               <p class="cardtitle text-dark ml-3"><i class="fas fa-plane"></i>
                <strong><%= post.destination %></strong>
               </p>
               <p class="card-text text-dark ml-3"><i class="fas fa-luggage-cart"></i>
                 <%= post.nights %>泊<%= post.days %>日
               </p>
               <p class="card-text text-dark ml-3"><i class="fas fa-hand-holding-usd"></i>
                <%= post.budget %>
               </p>
               <p class="card-text text-dark ml-3">
                 <%= post.content %>
               </p>
             </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
<% end %>