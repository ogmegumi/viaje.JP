<% if posts.favorited_by?(current_user) %>
  <%= link_to posts.favorites.count, post_favorites_path(posts.id), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to posts.favorites.count, post_favorites_path(posts.id), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>